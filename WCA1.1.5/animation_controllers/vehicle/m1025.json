{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.m1025_dviglo": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "da2": "query.health < 999500"
                        }
                    ]
                },
                "da2": {
                    "on_entry": [
                        "/effect @e[type=addon:m1025,c=1] slowness 2 222"
                    ],
                    "transitions": [ 
                        {
                          "default": "1.0"
                        }
                     ]
                }
            }
        },
        "controller.animation.m1025": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "dviglo": "q.mark_variant != 2 && q.is_alive && !q.has_rider"
                        },
                        {
                            "start": "q.has_player_rider"
                        }
                    ]
                },
                "dviglo": {
                    "on_entry": [
                        "/summon addon:m1025_dviglo",
                        "/ride @e[type=addon:m1025_dviglo,c=1] start_riding @s",
                        "/summon addon:m1025_kapsula",
                        "/ride @e[type=addon:m1025_kapsula,c=1] start_riding @s",
                        "/summon addon:m1025_pass",
                        "/summon addon:m1025_pass",
                        "/summon addon:m1025_pass",
                        "/ride @e[type=addon:m1025_pass,c=3] start_riding @s"
                    ],
                    "transitions": [
                        {
                            "start": "q.has_player_rider"
                        }
                    ]
                },
                "start": {
                    "transitions": [
                          {
                            "stop": "!q.has_player_rider"
                          }
                    ],
                    "on_entry": [
                        "@s addon:sperma"
                    ]
                },
                "stop": {
                    "transitions": [
                          {
                            "start": "q.has_player_rider"
                          },
                          {
                            "stop2": "1.0"
                          }
                    ],
                    "on_entry": [
                        "/ride @e[type=addon:m1025_dviglo,c=1] stop_riding",
                        "/ride @e[type=addon:m1025_kapsula,c=1] stop_riding",
                        "/ride @e[type=addon:m1025_pass,c=3] stop_riding",
                        "@s addon:unsperma",
                        "/ride @e[type=addon:m1025_dviglo,c=1] start_riding @e[type=addon:m1025,c=1]",
                        "/ride @e[type=addon:m1025_kapsula,c=1] start_riding @e[type=addon:m1025,c=1]",
                        "/ride @e[type=addon:m1025_pass,c=3] start_riding @e[type=addon:m1025,c=1]"
                    ]
                },
                "stop2": {
                    "transitions": [
                          {
                            "start": "q.has_player_rider"
                          }
                    ],
                    "on_entry": [
                        "/ride @e[type=addon:m1025_dviglo,c=1] start_riding @e[type=addon:m1025,c=1]",
                        "/ride @e[type=addon:m1025_kapsula,c=1] start_riding @e[type=addon:m1025,c=1]",
                        "/ride @e[type=addon:m1025_pass,c=3] start_riding @e[type=addon:m1025,c=1]"
                    ]
                }
            }
        }
    }
}